{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\uea85 {{ .UserName }} ",
          "foreground": "#01F0FF",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\uea83",
          "foreground": "#F822F8",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "..",
            "style": "folder"
          },
          "template": " {{ .Path }} ",
          "foreground": "#F822F8",
          "type": "path",
          "style": "plain"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ueb00",
          "foreground": "#01F0FF",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " git ",
          "foreground": "#01F0FF",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "\udb81\ude2c ",
            "cache_duration": "none"
          },
          "template": "{{ .HEAD }}  ",
          "foreground": "#F822F8",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\udb85\udfa9",
          "foreground": "#01F0FF",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf119",
          "foreground": "#01F0FF",
          "type": "exit",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
